<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="nsh.emp">
	<insert id="empInsert" parameterType="nsh.emp.model.EmpDTO">
		insert into
			employee
		values(
			employee_idx.nextval,
			#{name},
			#{email},
			#{dept}
		)
			
	</insert>
	<delete id="empDelete" parameterType="String">
		delete from
			employee
		where
			name=#{name}
	</delete>
	<select id="empList" resultType="nsh.emp.model.EmpDTO">
		select * from
			employee
		order by idx desc
	</select>
	<select id="empFindList" parameterType="String" resultType="nsh.emp.model.EmpDTO">
		select * from employee where name=#{name} order by idx desc
	</select>
	<select id="empUpdateForm" parameterType="int" resultType="nsh.emp.model.EmpDTO">
		select * from employee where idx=#{idx} order by idx desc
	</select>
	<update id="empUpdate" parameterType="nsh.emp.model.EmpDTO">
		update employee set name=#{name}, email=#{email}, dept=#{dept} where idx=#{idx}
	</update>
</mapper>